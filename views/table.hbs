<div class="row">
    <div class="col-md-12">

        {{#if tableRows}}
        <table class="table table-striped table-bordered">
            <thead class="thead" style="background-color:purple;color:white;">
                <tr>
                    <th scope="col">Cuota #</th>
                    <th scope="col">Abono a Intereses</th>
                    <th scope="col">Abono al capital</th>
                    <th scope="col">Saldo</th>
                </tr>
            </thead>
            <tbody>
                {{#each tableRows}}
                <tr>
                    <th scope="row">{{this.number}}</th>
                    <td>$ {{numberFormat this.intAdded thousandsSep="." decimalLength="1" decimalSep=","}}</td>
                    <td>$ {{numberFormat this.capAdded thousandsSep="." decimalLength="1" decimalSep=","}}</td>
                    <td>$ {{numberFormat this.balance thousandsSep="." decimalLength="1" decimalSep=","}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{!-- {{/each}} --}}
        </table>
        {{else}}
        <div class="row mx-auto p-8">
            <div class="col-md-12 mt-8">
                <h1>No tienes ninguna deuda</h1>
            </div>
        </div>
        {{/if}}
    </div>
</div>